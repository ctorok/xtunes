<h1>Listing albums</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Year</th>
    <th>Artist</th>
    <th>Genre</th>
   

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= album.name %></td>
    <td><%= album.year %></td>
  
    <td><% album.genres.each do |genre| %>
          <%= genre.name %>
        <% end %>
    </td>
    <td><% album.artists.each do |artist| %>
          <%= artist.name %>
        <% end %>
    </td>
        
    <td><%= link_to 'Show', album %></td>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

