<%= form_for @mixtape, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <br>
  <div class="field">
    <%= f.label :song %><br />
    <%= collection_select :album, :song_ids, Song.all, :id, :name, {}, {:multiple => true } -%>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                mixtapes_path, :class => 'btn' %>
  </div>
<% end %>
